{
  "name": "bfd_admin_api",
  "version": "0.0.1",
  "description": "Backend API for the BFD admin site",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d lib",
    "serve": "npm run build && npm run lint:js && node ./index.js",
    "start": "npm run serve",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern webpack .",
    "test": "npm run test:pre && cross-env NODE_ENV=test nyc mocha --require babel-core/register tests/mocha.js ./tests/**/*.tests.js ./tests/*.tests.js",
    "test:watch": "cross-env NODE_ENV=test mocha tests/mocha.js ./tests/**/*.tests.js ./tests/*.tests.js --watch",
    "test:pre": "npm run test:clean && npm run lint:js",
    "test:clean": "rimraf ./coverage && rimraf ./.nyc_output"
  },
  "author": "mostekcm",
  "license": "MIT",
  "engines": {
    "node": "7.6.0"
  },
  "repository": "github:mostekcm/bfd_admin_api",
  "dependencies": {
    "async": "^2.1.5",
    "bluebird": "^3.4.7",
    "boom": "^4.2.0",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-jwt": "^5.1.0",
    "google-spreadsheet": "^2.0.3",
    "hapi": "^16.1.0",
    "hapi-auth-jwt2": "^7.2.4",
    "hapi-cors": "^1.0.1",
    "joi": "^10.2.2",
    "jsonwebtoken": "^7.3.0",
    "jwks-rsa": "^1.1.1",
    "nconf": "^0.8.4",
    "request": "^2.78.0",
    "uuid": "^3.0.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-register": "^6.23.0",
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.10.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2"
  },
  "nyc": {
    "include": [
      "api/*.js",
      "api/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
