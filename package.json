{
  "name": "bfd_admin_api",
  "version": "0.0.1",
  "description": "Backend API for the BFD admin site",
  "main": "index.js",
  "scripts": {
    "build": "echo 'skip babel' || babel src -d lib",
    "serve": "npm run lint:js && npm run build && node ./index.js",
    "start": "npm run serve",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern webpack --ignore-pattern lib .",
    "test": "npm run test:pre && cross-env NODE_ENV=test nyc mocha --require babel-core/register tests/mocha.js ./tests/**/*.tests.js ./tests/*.tests.js",
    "test:watch": "cross-env NODE_ENV=test mocha tests/mocha.js ./tests/**/*.tests.js ./tests/*.tests.js --watch",
    "test:pre": "npm run test:clean && npm run lint:js",
    "test:clean": "rimraf ./coverage && rimraf ./.nyc_output"
  },
  "author": "mostekcm",
  "license": "MIT",
  "engines": {
    "node": "10.5.13"
  },
  "repository": "github:mostekcm/bfd_admin_api",
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@hapi/hapi": "^18.1.0",
    "async": "^2.1.5",
    "auth0": "^2.12.0",
    "base64url": "^3.0.1",
    "bluebird": "^3.4.7",
    "boom": "^4.2.0",
    "cors": "^2.8.1",
    "csv-writer": "^1.5.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-jwt": "^5.3.1",
    "google-spreadsheet": "^2.0.8",
    "googleapis": "^45.0.0",
    "hapi-auth-jwt2": "^8.8.0",
    "hapi-cors": "^1.0.3",
    "joi": "^10.2.2",
    "jsonwebtoken": "^7.3.0",
    "jwks-rsa": "^1.1.1",
    "mongodb": "^3.6.2",
    "lodash": "^4.17.15",
    "logzio-nodejs": "^1.0.7",
    "moment": "^2.24.0",
    "monquery": "^0.2.0",
    "nconf": "^0.8.4",
    "nodemailer": "^4.6.8",
    "pdfkit": "^0.8.3",
    "promise-throttle": "^0.3.1",
    "request": "^2.78.0",
    "sharp": "^0.23.4",
    "sprintf-js": "^1.0.3",
    "superagent": "^3.8.2",
    "uuid": "^3.0.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.2.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1"
  },
  "nyc": {
    "include": [
      "api/*.js",
      "api/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
